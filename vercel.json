{
  "version": 2,
  "env": {
    "PORT": "5000",
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "client/dist/**",
      "use": "@vercel/static",
      "config": {
        "includeFiles": ["client/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "client/dist/index.html"
    },
    {
      "src": "/[^.]+",
      "dest": "client/dist/index.html",
      "status": 200
    },
    {
      "src": "/(.+)",
      "dest": "client/dist/$1"
    }
  ]
}
